<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kotlinappmvvm.fragments.HomeFragment"
        android:label="Users List"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.kotlinappmvvm.fragments.DetailFragment"
        android:label="User Details"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="item"
            app:argType="com.example.kotlinappmvvm.models.Item" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.kotlinappmvvm.fragments.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_favouritesFragment_to_favouriteDetailFragment"
            app:destination="@id/favouriteDetailFragment" />
        <action
            android:id="@+id/action_favouritesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteDetailFragment"
        android:name="com.example.kotlinappmvvm.fragments.FavouriteDetailFragment"
        android:label="fragment_favourite_detail"
        tools:layout="@layout/fragment_favourite_detail" >
        <action
            android:id="@+id/action_favouriteDetailFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <argument
            android:name="item"
            app:argType="com.example.kotlinappmvvm.db.ItemEntity" />
    </fragment>
</navigation>